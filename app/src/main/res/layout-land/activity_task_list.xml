<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskListActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_main_title"
        style="@style/ActivityTitle"
        android:text="Task List"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_main_subtitle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_main_subtitle"
        style="@style/ActivitySubTitle"
        android:text="Task Tracker by System"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_title"
        app:layout_constraintBottom_toTopOf="@+id/ll_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_subtitle"
        app:layout_constraintBottom_toTopOf="@+id/adViewBanner">
       <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/tv_task_description"
               android:text="@string/task_description"
               android:layout_gravity="center_horizontal"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:id="@+id/et_task_entry"
               android:inputType="textMultiLine"
               android:imeOptions="actionDone"
               android:hint="@string/et_task_entry_hint"
               android:layout_marginStart="@dimen/text_margin"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="@dimen/text_margin">
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="2dp"
                       android:background="@color/us_ac_accent_dark"/>
                   <LinearLayout
                       android:layout_width="200dp"
                       android:layout_height="56dp"
                       android:orientation="horizontal">
                       <View
                           android:layout_width="2dp"
                           android:layout_height="match_parent"
                           android:background="@color/us_ac_accent_dark"/>
                       <Spinner
                           android:layout_width="196dp"
                           android:layout_height="match_parent"
                           android:id="@+id/sp_system_name"
                           android:contentDescription="@string/system_spinner">
                       </Spinner>
                       <View
                           android:layout_width="2dp"
                           android:layout_height="match_parent"
                           android:background="@color/us_ac_accent_dark"/>
                   </LinearLayout>
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="2dp"
                       android:background="@color/us_ac_accent_dark"/>
               </LinearLayout>


               <Button
                   android:id="@+id/btn_add_task"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="60dp"
                   android:contentDescription="@string/add_task"
                   android:text="@string/add_task"
                   android:layout_gravity="bottom"
                   android:layout_marginLeft="@dimen/text_margin"/>
           </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/tv_completed_tasks"
                android:gravity="top"
                android:layout_marginStart="@dimen/text_margin"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btn_email_report"
                android:text="@string/email_report"
                android:layout_gravity="bottom"
                android:contentDescription="@string/email_report_button"
                android:layout_marginStart="@dimen/text_margin"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewBanner"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8686454969066832/2017040207"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_parent">
    </com.google.android.gms.ads.AdView>
</android.support.constraint.ConstraintLayout>