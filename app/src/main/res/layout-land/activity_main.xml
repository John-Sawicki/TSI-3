<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_main_title"
            style="@style/ActivityTitle"
            android:text="@string/telecom_system_integration"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/telecom_system_integration"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_main_subtitle"
            style="@style/ActivitySubTitle"
            android:text="@string/system_selection"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/system_selection"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rv_system_name"
            android:layout_gravity="center_horizontal">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewBanner"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8686454969066832/2017040207">
    </com.google.android.gms.ads.AdView>
</FrameLayout>