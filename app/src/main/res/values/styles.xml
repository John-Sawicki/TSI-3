<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/us_ac_accent</item>
        <item name="colorPrimaryDark">@color/us_ac_accent_dark</item>
        <item name="colorAccent">@color/eu_ac_accent</item>
    </style>

    <style name="ActivityTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="ActivityTitleShort">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
    <style name="ActivitySubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/us_ac_accent_dark</item>
    </style>
    <style name="MainActivityStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MainActivityStyle_land">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="WidgetTSI">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TwoColumnResults">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>

