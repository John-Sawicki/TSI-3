<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SystemName">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ActivityTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="ActivitySubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/us_ac_accent_dark</item>
    </style>
    <style name="SectionTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="MainActivityStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="MainActivityStyle_land">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="WidgetTSI">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TwoColumnResults">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>

